                    <li><a href="/orderHistory"><i class="fa-solid fa-clock-rotate-left mx-3" style="color: #fefefe;">
                            </i><span class="d-none d-sm-inline">Order history</span></a></li>
                    <li><a href="/savedaddress"><i class="fa-solid fa-address-book mx-3" style="color: #fefefe;">
                            </i><span class="d-none d-sm-inline">Saved address</span></a></li>

                </ul>
            </nav>
        </div>

        <div class="container-fluid">
            <!-- Delivery Address -->
            <div class="m-4 ">
                <h4>Delivery Address</h4>
                <p class="delivery-address"><%= information.address %></p>
            </div>
        
            <!-- Order Items -->

            <h4 class="m-4">Ordered product</h4>

            <ul class="list-group m-4">
                <% information.items.forEach((item) => { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center order-item">
                        <div class="d-flex align-items-center">
                            <img src="<%= item.productImage %>" alt="<%= item.productName %>" style="width: 70px; height: 70px;" class="me-3 order-item-image">
                            <div>
                                <h6 class="mb-0 order-item-name"><%= item.productName %></h6>
                                <small class="text-muted order-item-quantity">Quantity: <%= item.quantity %></small>
                            </div>
                        </div>
                        <div class="text-danger order-item-price">&#8377;<%= item.price %></div>
                    </li>
                <% }); %>
            </ul>




            <div class="d-flex justify-content-between ">
                <div class="m-4 info-box  ">
                    <h5>Payment Method:</h5>
                    <p class="delivery-address"><%= information.paymentMethod %></p>
                </div>
                <div class="m-4 info-box">
                    <h5>Coupon Applied:</h5>
                    <p class="delivery-address"><%= information?.couponCode %></p>
                </div>
                <div class="m-4 info-box">
                    <h5>Discount Given:</h5>
                    <p class="delivery-address">&#8377; <%= information?.discountgiven %></p>
                </div>
                <div class="m-4 info-box">
                    <h5>Delivery Charges:</h5>
                    <p class="delivery-address">&#8377; <%= information?.DeliveryCharge %></p>
                </div>
            </div>
            
           


            <h4 class="m-4 ">Order status</h4>
            <div class="d-flex justify-content-center align-items-center">
                <% if (information?.Status === "pending" || information?.Status === "shipped" || information?.Status === "delivered") { %>
                    <div class="status-container">
                        <i class="fa-solid fa-clock" style="color: #00cc00;"></i>
                        <span style="color:#006600;">Pending</span>
                    </div>
                <% } %>
                
               
            
                <% if (information?.Status === "shipped" || information?.Status === "delivered") { %>
                    <i class="fas fa-arrow-right" style="color:#006600; width: 100px;"></i>
                
                    <div class="status-container">
                        <i class="fa-solid fa-truck" style="color: #00cc00;"></i>

                        <span style="color:#006600;">Shipped</span>
                    </div>
                <% } %>
                


                <% if (information?.Status === "delivered") { %>
                    <i class="fas fa-arrow-right" style="color: #006600; width: 100px;"></i>
                  
                    <div class="status-container">
                        <i class="fa-solid fa-circle-check" style="color: #00cc00;;"></i>
                        <span style="color:#006600;">Delivered</span>
                    </div>
                <% } %>
            
              
            
            </div>
            <br>
            
            


        



            

        </div>
        
       

      
        



    </div>
    </div>
